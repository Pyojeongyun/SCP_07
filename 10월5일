#include <LiquidCrystal_I2C.h>

LiquidCrystal_I2C lcd(0x3F,16,2);


#define TRIG1 2 //초음파 보냄 (차량 감지)
#define ECHO1 3 //돌아오는 초음파 감지
#define TRIG2 4 //초음파 보냄 (화폐 감지)
#define ECHO2 5 //돌아오는 초음파 감지
#define RED 11
#define GREEN 10

long color=0;    //color변수는 LED불빛이 빨간색인지 초록색인지 구별할수있게 해주는 변수
long fee=0;

unsigned long charge=0;
unsigned long t1=0;
unsigned long t2=0;

void setup()
{
    Serial.begin(9600);
  pinMode(TRIG1, OUTPUT); 
  pinMode(ECHO1, INPUT);
  pinMode(TRIG2, OUTPUT); 
  pinMode(ECHO2, INPUT); 
  pinMode(GREEN, OUTPUT);
  pinMode(RED, OUTPUT);
  
  lcd.init();
  lcd.backlight();
}

void loop()
{
   digitalWrite(TRIG1, LOW);
  delayMicroseconds(2);
  digitalWrite(TRIG1, HIGH);
  delayMicroseconds(10);
  digitalWrite(TRIG1, LOW);
  
   digitalWrite(TRIG2, LOW);
  delayMicroseconds(2);
  digitalWrite(TRIG2, HIGH);
  delayMicroseconds(10);
  digitalWrite(TRIG2, LOW);

  long distance = pulseIn(ECHO, HIGH)/58.2;        // 차량까지 측정한 거리를 cm단위로 변환시켜주는 식
  long moneydistance = pulseIn(ECHO2, HIGH)/58.2;  // 화폐까지 측정한 거리를 cm단위로 변환시켜주는 식
  
  Serial.print(moneydistance); 
  Serial.println("cm");

  Serial.print(moneydistance);
  Serial.println("cm");

  analogWrite(RED, 0);
  analogWrite(GREEN, 10);

  if(distance<10){                            //대형차 일 때
    if(color==0){
      charge=1000;
      t1 = millis();
    }
    analogWrite(GREEN, 0);
    analogWrite(RED, 10);
    color=1;
    lcd.init();                               //자릿수 바뀔 때 출력오류 방지위해 초기화
    lcd.backlight();
  }


  else if(distance <20){                      //소형차 일 때
    if(color==0){
       charge=500;
      t1 = millis();
    }
    analogWrite(GREEN, 0);
    analogWrite(RED, 10);
    color=1;
    lcd.init();
    lcd.backlight();
  }

  else {                                      //주차 차가 나갈 때
    if(color==1){
      t2 = millis();
    }
    analogWrite(RED, 0);
    analogWrite(GREEN, 10);
    color=0;
    
    fee=charge*((int)(t2-t1)/1000);           //차종에 맞게 요금계산
    
    if(charge!=0)                             //출력 반복되는것을 피하기위해서
    {
      lcd.setCursor(0, 0);
      lcd.print((int)(t2-t1)/1000);
      lcd.setCursor(5,0);
      lcd.print("seconds");
      
      lcd.setCursor(0, 1);
      lcd.print(fee);
      lcd.setCursor(5,1);
      lcd.print("Won");
      charge=0;
    }
    
      long rest = fee;

    if(moneydistance<10 && rest!=500){
      count=count+1;
      lcd.init();
      lcd.backlight();
      lcd.setCursor(0, 0);
      lcd.print("Fee is");
      lcd.setCursor(8,0);
      lcd.print(fee);
      lcd.setCursor(13, 0);
      lcd.print("Won");

      lcd.setCursor(0, 1);
      lcd.print("Insert");
      lcd.setCursor(8, 1);
    
      rest=rest-500*count;
      lcd.print(rest);
      lcd.setCursor(13, 1);
      lcd.print("Won");
    }

    if(moneydistance<10 && rest==500){
      lcd.init();
      lcd.backlight();
      lcd.setCursor(0, 0);
      lcd.print("Complete!");
      lcd.setCursor(0, 1);
      lcd.print("Thank you!");
    }
  }
  delay(100);
}
